        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/AdminStatsDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AdminStatsDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/AdminStatsDto"
                }
              }
            }
          }
        }
      }
    },
